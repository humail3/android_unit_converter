<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Source Unit TextView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Source Unit"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Source Unit Spinner -->
    <Spinner
        android:id="@+id/sourceUnitSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:entries="@array/unit_array"
        android:padding="15dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal" />

    <!-- Destination Unit TextView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination Unit"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Destination Unit Spinner -->
    <Spinner
        android:id="@+id/destinationUnitSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:entries="@array/unit_array"
        android:padding="15dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal" />

    <!-- EditText for value -->
    <EditText
        android:id="@+id/valueEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter value"
        android:inputType="numberDecimal"
        android:padding="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp" />

    <!-- Convert Button -->
    <Button
        android:id="@+id/convertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:paddingLeft="70dp"
        android:paddingTop="10dp"
        android:paddingRight="70dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center_horizontal" />

    <!-- Result TextView -->
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:padding="15dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
